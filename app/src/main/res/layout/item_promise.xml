<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPaddingEnd="2dp"
    app:cardBackgroundColor="@color/lightest_gray"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/sold_blue">

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text=" 어떤 약속인지에 대한 텍스트"/>


        <TextView
            android:id="@+id/product_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="10dp"
            android:text="에어팟 프로팝니다 "
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/msg_tv"
            />

        <TextView
            android:id="@+id/product_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:text="4월 22일 오후 02:00"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_title_tv" />
        <TextView
            android:id="@+id/product_price_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:text="장소"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_date_tv" />
        <TextView
            android:id="@+id/product_memo_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:text="메모"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_price_tv" />

        <TextView
            android:id="@+id/headBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/square_sold_out"
            android:gravity="center"
            android:text="판매완료"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_memo_tv" />

        <TextView
            android:id="@+id/middleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/square_sold_out"
            android:gravity="center"
            android:text="판매완료"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@id/headBtn"
            app:layout_constraintTop_toBottomOf="@id/product_memo_tv" />

        <TextView
            android:id="@+id/tailBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/square_sold_out"
            android:gravity="center"
            android:text="판매완료"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@id/middleBtn"
            app:layout_constraintTop_toBottomOf="@id/product_memo_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>